<view class="body"><view class="phone"><view class="phone-code f-ac-jc">+86</view><input type="numble" placeholder="手机号" data-event-opts="{{[['input',[['__set_model',['','phone','$event',[]]]]]]}}" value="{{phone}}" bindinput="__e"/></view><view hidden="{{!(!this.isbind)}}" class="password-input"><input type="numble" placeholder="请输入验证码" data-event-opts="{{[['input',[['__set_model',['','phoneCode','$event',[]]]]]]}}" value="{{phoneCode}}" bindinput="__e"/><view data-event-opts="{{[['tap',[['getPhoneCode',['$event']]]]]}}" class="password-input-forget f-jc" bindtap="__e">{{!phoneCodeTime?"获取验证码":phoneCodeTime+'s'}}</view></view><button class="{{['set-btn',(disabledPhone)?'set-btn-disable':'']}}" type="primary" disabled="{{disabledPhone}}" data-event-opts="{{[['tap',[['submit',['$event']]]]]}}" bindtap="__e">{{this.isbind?"已绑定":"完成"}}</button></view>