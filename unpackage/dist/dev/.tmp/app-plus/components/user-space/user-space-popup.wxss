
.papers-menu-mask{
	position: fixed;
	top: 0;
	bottom: 0;
	left: 0;
	right: 0;
	z-index: 2;
}
.papers-menu{
	position: fixed;
	background: #FFFFFF;
	top: 100rpx;
	right: 0;
	-webkit-border-radius: 8rpx;
	        border-radius: 8rpx;
	width: 55%;
	z-index: 999;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	-webkit-box-shadow: 1rpx 1rpx 20rpx 2rpx #CCCCCC;
	        box-shadow: 1rpx 1rpx 20rpx 2rpx #CCCCCC;
}
.papers-menu>view{
	padding: 20rpx;
	font-size: 35rpx;
	font-weight: bold;
}
.papers-menu .icon{
	margin-right: 20rpx;
}
.papers-menu .menu-hover-item{
	background: #EEEEEE;
}

